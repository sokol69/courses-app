<h1>Add course</h1>

<form action="/add" method="POST">
  <div class="input-field">
    <input id="name" name="name" type="text" class="validate" required>
    <label for="name">Course Name</label>
    <span class="helper-text" data-error="Incorrect name"></span>
  </div>

  <div class="input-field">
    <input id="price" name="price" type="number" class="validate" required>
    <label for="price">Price</label>
    <span class="helper-text" data-error="Incorrect price"></span>
  </div>

  <div class="input-field">
    <input id="img" name="img" type="text" class="validate" required>
    <label for="img">Image URL</label>
    <span class="helper-text" data-error="Incorrect URL"></span>
  </div>

  <button class="btn btn-primary">Add Course</button>
</form>