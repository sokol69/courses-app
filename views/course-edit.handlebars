<h1>Edit {{course.name}}</h1>

<form action="/courses/edit" method="POST" class="course_form-edit">
  <div class="input-field">
    <input id="name" name="name" type="text" class="validate" required value="{{course.name}}">
    <label for="name">Course Name</label>
    <span class="helper-text" data-error="Incorrect name"></span>
  </div>

  <div class="input-field">
    <input id="price" name="price" type="number" class="validate" required min="1" value="{{course.price}}">
    <label for="price">Price</label>
    <span class="helper-text" data-error="Incorrect price"></span>
  </div>

  <div class="input-field">
    <input id="img" name="img" type="text" class="validate" required value="{{course.img}}">
    <label for="img">Image URL</label>
    <span class="helper-text" data-error="Incorrect URL"></span>
  </div>

  <input type="hidden" name="id" value="{{course.id}}">

  <button type="submit" class="btn btn-primary">Update</button>
</form>

<form action="/courses/remove" method="POST">
  <input type="hidden" name="id" value="{{course.id}}">
  <button type="submit" class="btn red">Delete course</button>
</form>